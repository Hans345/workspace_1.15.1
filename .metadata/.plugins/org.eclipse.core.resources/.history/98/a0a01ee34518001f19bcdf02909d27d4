//-----------------------------------------------------------------------------------------------------------------------
/****** Includes ******/

//-----------------------------------------------------------------------------------------------------------------------
/****** States ******/
enum{
    IDLE,
    LEDON,
    LEDBLINK
};

//-----------------------------------------------------------------------------------------------------------------------
/****** PIN DEFINES ******/
#define B1 GPIOC
#define B1_PIN  GPIO_PIN_13
#define LD2 GPIOA
#define LD2_PIN  GPIO_PIN_5

//-----------------------------------------------------------------------------------------------------------------------

